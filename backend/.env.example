# ================================
# PPT设计大师 后端配置
# ================================

# 文本处理 API (Cotton)
# 用于脚本分析、内容生成等文本处理
TEXT_API_KEY=sk-xxxxxxxxxx
TEXT_API_BASE=https://cottonapi.cloud/v1
TEXT_MODEL=gemini-2.0-flash

# 图像处理 API (Privnode)
# 用于 PPT 参考图生成、插画提取
IMAGE_API_KEY=sk-xxxxxxxxxx
IMAGE_API_BASE=https://privnode.com
IMAGE_MODEL=gemini-3-pro-image-preview-2k

# Flask 配置
PORT=5002
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# CORS 配置（多个地址用逗号分隔）
CORS_ORIGINS=*

# 并发配置
MAX_DESCRIPTION_WORKERS=5
MAX_IMAGE_WORKERS=4

# 文件存储
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs
